<div id="application-form-container" class="mt-5 ms-3">
    <%if(errorMessage){ %>
        <div class="alert alert-danger" role="alert">
            <%= errorMessage %>
        </div>
        <%}%>
        <h1>Apply Job, <span>Easily!</span><br> in less than 1 min</h1>
    <form action="/jobs/<%= id %>/apply" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
            <input type="text" name="name" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
            <input type="email" name="email" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">Contact</span>
            <input type="number" name="contact" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="mb-3">
            <input class="form-control" type="file" name="resumeSrc" id="resumeSrc" accept="files/*" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</div>